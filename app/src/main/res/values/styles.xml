<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
    </style>


    <style name="AppSearchView" parent="Widget.AppCompat.Light.SearchView">
        <item name="submitBackground">@android:color/white</item>
        <item name="queryBackground">@android:color/white</item>
        <!--<item name="android:fontFamily">@android:color/white</item>-->
        <item name="android:editTextColor">@android:color/white</item>
        <item name="android:editTextStyle">@android:style/Widget.Material.Light.ActionBar.Solid</item>
    </style>

</resources>
